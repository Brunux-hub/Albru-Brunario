# ===========================================
# ALBRU CRM - CONFIGURACIÓN DE ENTORNO
# ===========================================

# -----------------------------------------------
# BASE DE DATOS - MySQL
# -----------------------------------------------
DB_HOST=localhost
DB_PORT=3306
DB_USER=albru
DB_PASSWORD=albru12345
DB_NAME=albru_crm

# -----------------------------------------------
# REDIS - Sesiones y Cache
# -----------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------------------------------------
# SERVIDOR
# -----------------------------------------------
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5174

# -----------------------------------------------
# WEBSOCKET / SOCKET.IO
# -----------------------------------------------
WS_PORT=3001
CORS_ORIGINS=http://localhost:5174,http://localhost:5173

# -----------------------------------------------
# SESIONES Y TIMEOUTS
# -----------------------------------------------
# Tiempo de inactividad antes de timeout (segundos)
SESSION_TIMEOUT=600
# Intervalo del worker (milisegundos)
WORKER_INTERVAL=30000

# -----------------------------------------------
# JWT / AUTENTICACIÓN
# -----------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# -----------------------------------------------
# LOGGING
# -----------------------------------------------
LOG_LEVEL=info
